<%= form_for note do |f| %>
  <% if note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
      <% note.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, "Tytuł", :class => 'control-label col-sm-2' %>
    <div class="col-sm-10"><%= f.text_field :title, :class => 'form-control mb-2 mr-sm-2 mb-sm-0' %></div>
  </div>

  <div class="form-group">
    <%= f.label :text, "Opis", :class => 'control-label col-sm-2' %>
    <div class="col-sm-10"><%= f.text_area :text, :class => 'form-control mb-2 mr-sm-2 mb-sm-0' %></div>
  </div>

  <div class="form-group">
    <%= f.label :toDate, "Data zadania", :class => 'control-label col-sm-2' %>
    <div class="col-sm-10"><%= f.text_field :toDate, :class => 'datePicker' %></div>
  </div>

  <div class="form-group">
    <%= f.label :icon, "Ikona", :class => 'control-label col-sm-2' %>
    <div class="col-sm-10"><%= f.select :icon, collection: Note.allowed_icons %></div>
  </div>

  <div class="form-group">
    <%= f.label :color, "Kolor", :class => 'control-label col-sm-2' %>
    <div class="col-sm-10"><%= f.select :color, collection: Note.allowed_colors %></div>
  </div>

  <div class="actions">
    <%= f.submit "Utwórz zadanie", :class => 'btn btn-primiary' %>
  </div>
<% end %>

<script type="text/javascript">
  //$('.datePicker').datepicker ( "option", "dateFormat", 'yy-mm-dd' );
  $('.datePicker').datepicker({
      format: "yyyy-mm-dd",
      startDate: "today"
  });
</script>
