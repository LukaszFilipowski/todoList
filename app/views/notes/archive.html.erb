<div style="margin-top:30px;" class="row">

  <div class="col-lg-12">
    <div id="taskLists" class="taskLists panel panel-default">
      <div class="panel-heading">
        <i class="fa fa-clock-o fa-fw"></i> Archiwalne zadania
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <ul class="timeline">
          <% i = 1
             @notes.each do |note| %>
              <li <% if i == 0 %> class="timeline-inverted" <% i = 1 else i = 0 end %> >
                <div class="timeline-badge <%= note.color %>"><i class="fa fa-<%= note.icon %>"></i>
                </div>
                <div class="timeline-panel">
                  <div class="timeline-heading">
                    <h4 class="timeline-title"><%= note.title %></h4>
                    <p><small class="text-muted"><i class="fa fa-clock-o"></i> <%= note.toDate %> </small>
                    </p>
                  </div>
                  <div class="timeline-body">
                    <p><%= note.text %></p>
                  </div>
                </div>
              </li>
          <% end %>
        </ul>
      </div>
      <!-- /.panel-body -->
    </div>
  </div>
</div>
