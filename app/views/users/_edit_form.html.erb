 <%= form_for(user) do |f| %>
     <% if user.id == session[:user_id] %>
        <% if user.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

              <ul>
                <% user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>


        <div class="form-group">
          <%= f.label :login, "Login", :class => 'control-label col-sm-2' %>
          <%= f.text_field :login %>
        </div>

        <div class="form-group">
          <%= f.label :email, "Email", :class => 'control-label col-sm-2'  %>
          <%= f.text_field :email %>
        </div>

        <div class="form-group">
          <%= f.label :password, "Hasło", :class => 'control-label col-sm-2'  %>
          <%= f.password_field :password %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Powtórz hasło", :class => 'control-label col-sm-2'  %>
          <%= f.text_field :password_confirmation %>
        </div>

        <div class="form-group">
          <%= f.label :dayObj, "Cel dzienny", :class => 'control-label col-sm-2'  %>
          <%= f.number_field :dayObj %>
        </div>


        <div class="form-group">
          <%= f.submit "Edytuj", :class => 'btn btn-primiary'  %>
        </div>
     <% else %>
        Brak dostępu
     <% end %>
  <% end %>

