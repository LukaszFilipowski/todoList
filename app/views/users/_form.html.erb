<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :login, "Login", :class => 'control-label col-sm-2' %>
    <div class="col-sm-10"><%= f.text_field :login %></div>
  </div>

  <div class="form-group">
    <%= f.label :email, "Email", :class => 'control-label col-sm-2' %>
    <div class="col-sm-10"><%= f.text_field :email %></div>
  </div>

  <div class="form-group">
    <%= f.label :password, "Hasło", :class => 'control-label col-sm-2' %>
    <div class="col-sm-10"><%= f.password_field :password %></div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Powtórz hasło", :class => 'control-label col-sm-2' %>
    <div class="col-sm-10"><%= f.password_field :password_confirmation %></div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10"><%= f.submit "Zarejetruj się" %></div>
  </div>
<% end %>
