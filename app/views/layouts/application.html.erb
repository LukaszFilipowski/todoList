<!DOCTYPE html>
<html>
  <head>
    <title>TodoList</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div id="wrapper">

    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="<%= root_path %>">todoList</a>
      </div>
      <!-- /.navbar-header -->

      <ul class="nav navbar-top-links navbar-right">
        <% if current_user %>
            <li>Punkty: <%= current_user.points %></li>
        <% end %>
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            <i class="fa fa-user fa-fw"></i> <i class="fa fa-caret-down"></i>
          </a>
          <ul class="dropdown-menu dropdown-user">
            <% if current_user %>
                <li><a href="#"><i class="fa fa-user fa-fw"></i> Zalogowany jako  <%=current_user.email%></a></li>
                <li class="divider"></li>
                <li><a href="<%=logout_path %>"><i class="fa fa-sign-out fa-fw"></i> Wyloguj</a>
                </li>
             <% else %>
                <li><a href="<%=login_path %>"><i class="fa fa-sign-out fa-fw"></i> Logowanie</a>
                </li>
                <li><a href="<%=singup_path %>"><i class="fa fa-sign-out fa-fw"></i> Rejestracja</a>
                </li>
             <% end %>
          </ul>

        </li>
      </ul>
    </nav>

    <div id="page-wrapper">
      <% if flash[:notice] %>
          <div class="alertBox alert alert-info"><a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a><%= flash[:notice] %></div>
      <% end %>
      <%= yield %>
    </div>
  </div>

  </body>
</html>
